@{
    ViewData["Title"] = "Hoş Geldiniz";
}

<style>
    body {
        background: #f4f4f4 !important;
    }

    /* Küçültülmüş modern hero */
    .hero {
        background: linear-gradient(135deg, #6e8efb, #a777e3);
        color: white;
        padding: 60px 20px;
        border-radius: 14px;
        text-align: center;
        margin-top: 20px;
        box-shadow: 0 8px 18px rgba(0,0,0,0.15);
    }

        .hero h1 {
            font-size: 38px;
            font-weight: 700;
        }

        .hero p {
            font-size: 17px;
            opacity: 0.9;
        }

    .feature-card {
        transition: 0.25s ease;
        border-radius: 14px;
        background: white;
        border: none;
    }

        .feature-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 22px rgba(0,0,0,0.15);
        }
</style>

<div class="container">

    <!-- HERO ALANI (küçültülmüş modern görünüm) -->
    <div class="hero">
        <h1>🏋️‍♂️ Fitness Yönetim Sistemine Hoş Geldiniz</h1>
        <p>Spor salonları, antrenörler ve hizmetlerinizi kolayca yönetin.</p>

        @if (!User.Identity.IsAuthenticated)
        {
            <a class="btn btn-light btn-lg mt-3 me-2" href="/Account/Login">Giriş Yap</a>
            <a class="btn btn-outline-light btn-lg mt-3" href="/Account/Register">Kayıt Ol</a>
        }
        else if (User.IsInRole("Uye"))
        {
            <a class="btn btn-dark btn-lg mt-3" href="/Randevu/HizmetSec">Başla</a>
        }
        else if (User.IsInRole("Admin"))
        {
            <a class="btn btn-warning btn-lg mt-3" href="/Salonlar">Admin Paneli</a>
        }

    </div>

    <!-- KARTLAR -->
    <div class="row text-center mt-5">

        <div class="col-md-4 mb-4">
            <div class="card feature-card p-4">
                <h3>🏋️‍♀️ Antrenörler</h3>
                <p>Salonunuzdaki tüm antrenörleri görüntüleyin.</p>
                <a href="/Antrenorler" class="btn btn-primary">Görüntüle</a>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card feature-card p-4">
                <h3>💆 Hizmetler</h3>
                <p>Fitness, yoga, pilates gibi hizmetleri inceleyin.</p>
                <a href="/Hizmetler" class="btn btn-primary">Görüntüle</a>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card feature-card p-4">
                <h3>🏠 Salonlar</h3>
                <p>Tüm spor salonlarını kolayca keşfedin.</p>
                <a href="/Salonlar" class="btn btn-primary">Görüntüle</a>
            </div>
        </div>

    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="mt-4 p-4 bg-dark text-white rounded shadow">
            <h4>🔐 Admin Paneli</h4>
            <p>Yönetim işlemleri:</p>

            <a href="/Salonlar" class="btn btn-outline-light me-2">Salon Yönetimi</a>
            <a href="/Antrenorler" class="btn btn-outline-light me-2">Antrenör Yönetimi</a>
            <a href="/Hizmetler" class="btn btn-outline-light">Hizmet Yönetimi</a>
        </div>
    }

</div>
