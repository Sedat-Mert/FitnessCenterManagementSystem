@model IEnumerable<sedatodev1.Models.Antrenor>

<h2>Antrenör Listesi</h2>

@if (User.IsInRole("Admin"))
{
    <a class="btn btn-success mb-3" asp-action="Create">Yeni Antrenör Ekle</a>
}

<table class="table mt-3 table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık</th>
            <th>Telefon</th>
            <th>Salon</th>
            @if (User.IsInRole("Admin"))
            {
                <th style="width:150px;">İşlemler</th>
            }
        </tr>
    </thead>

    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Ad</td>
                <td>@a.Uzmanlik</td>
                <td>@a.Telefon</td>
                <td>@a.Salon.Ad</td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-controller="Antrenorler"
                           asp-action="Edit"
                           asp-route-id="@a.Id"
                           class="btn btn-warning btn-sm">Düzenle</a>

                        <form asp-controller="Antrenorler"
                              asp-action="Delete"
                              method="post"
                              style="display:inline;">
                            <input type="hidden" name="id" value="@a.Id" />
                            <button type="submit"
                                    class="btn btn-danger btn-sm"
                                    onclick="return confirm('Bu antrenörü silmek istediğinize emin misiniz?');">
                                Sil
                            </button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
