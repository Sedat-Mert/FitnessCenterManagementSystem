@model sedatodev1.Models.Hizmet

<h2>Yeni Hizmet Ekle</h2>

<form method="post">
    <div class="form-group">
        <label>Hizmet Adı</label>
        <input class="form-control" name="Ad" required />
    </div>

    <div class="form-group mt-2">
        <label>Süre (dk)</label>
        <input type="number" class="form-control" name="Sure" required />
    </div>

    <div class="form-group mt-2">
        <label>Ücret (₺)</label>
        <input type="number" class="form-control" name="Ucret" required />
    </div>

    <div class="form-group mt-2">
        <label>Salon</label>
        <select class="form-control" name="SalonId" required>
            <option value="">Salon Seçin</option>
            @foreach (var s in ViewBag.Salonlar)
            {
                <option value="@s.Id">@s.Ad</option>
            }
        </select>
    </div>

    <div class="form-group mt-2">
        <label>Gereken Uzmanlık</label>
        <select class="form-control" name="GerekenUzmanlik" required>
            <option value="">Seçin</option>
            <option value="yoga">Yoga</option>
            <option value="fitness">Fitness</option>
            <option value="pilates">Pilates</option>
            <option value="masaj">Masaj</option>
            <option value="trx">TRX</option>
            <option value="crossfit">Crossfit</option>
        </select>
    </div>

    <button class="btn btn-success mt-3">Kaydet</button>
</form>
