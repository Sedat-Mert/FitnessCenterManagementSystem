@model sedatodev1.Models.Hizmet

<h2>Hizmeti Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Hizmet Adı</label>
        <input class="form-control" asp-for="Ad" required />
    </div>

    <div class="form-group mt-2">
        <label>Süre (dk)</label>
        <input type="number" class="form-control" asp-for="Sure" required />
    </div>

    <div class="form-group mt-2">
        <label>Ücret (₺)</label>
        <input type="number" class="form-control" asp-for="Ucret" required />
    </div>

    <div class="form-group mt-2">
        <label>Salon</label>
        <select class="form-control" asp-for="SalonId" asp-items="@(new SelectList(ViewBag.Salonlar, "Id", "Ad"))">
        </select>
    </div>

    <button class="btn btn-primary mt-3">Güncelle</button>
</form>
