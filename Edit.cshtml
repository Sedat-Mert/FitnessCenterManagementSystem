@model sedatodev1.Models.Antrenor

<h2>Antrenör Düzenle</h2>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label>Ad Soyad</label>
        <input class="form-control" name="Ad" value="@Model.Ad" required />
    </div>

    <div class="form-group mt-2">
        <label>Uzmanlık</label>
        <input class="form-control" name="Uzmanlik" value="@Model.Uzmanlik" required />
    </div>

    <div class="form-group mt-2">
        <label>Telefon</label>
        <input class="form-control" name="Telefon" value="@Model.Telefon" required />
    </div>

    <div class="form-group mt-2">
        <label>Salon</label>
        <select class="form-control" name="SalonId">
            @foreach (var s in ViewBag.Salonlar)
            {
                <option value="@s.Id" selected="@(s.Id == Model.SalonId ? "selected" : null)">
                    @s.Ad
                </option>
            }
        </select>

    </div>

    <button class="btn btn-primary mt-3">Güncelle</button>
</form>
